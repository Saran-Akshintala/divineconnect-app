{
  "name": "divineconnect-backend",
  "version": "1.0.0",
  "description": "Backend API for DivineConnect - Spiritual Services Marketplace",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npm run db:migrate && npm run db:seed"
  },
  "keywords": [
    "spiritual",
    "pooja",
    "booking",
    "marketplace",
    "api"
  ],
  "author": "DivineConnect Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sequelize": "^6.32.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "firebase-admin": "^11.10.1",
    "razorpay": "^2.9.2",
    "axios": "^1.5.0",
    "moment": "^2.29.4",
    "uuid": "^9.0.0",
    "joi": "^17.9.2",
    "nodemailer": "^6.9.4",
    "twilio": "^4.15.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "sequelize-cli": "^6.6.1",
    "@types/jest": "^29.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
